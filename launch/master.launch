<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find guided_research)/maps/map.yaml"/>
  <arg name="x_pos" default="-3.0"/>
  <arg name="y_pos" default="3.0"/>
  <arg name="z_pos" default="0.0"/>
  <!-- <arg name="scan" default="scan"/> -->

  <!-- Gazebo -->
  <env name="GAZEBO_MODEL_PATH" value="$(find guided_research)/models:$(optenv GAZEBO_MODEL_PATH)"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find guided_research)/worlds/simple_office_with_people.world"/>
    <arg name="paused" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

  <!-- TurtleBot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map Server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find guided_research)/launch/amcl.launch"/>

  <!-- Move Base -->
  <include file="$(find guided_research)/launch/move_base.launch"/>

  <!-- Leg Detector -->
  <!-- <node pkg="leg_detector" type="leg_detector" name="leg_detector" args="scan:=base_scan $(find leg_detector)/config/trained_leg_detector.yaml" output="screen"/> -->

  <!-- Rviz -->
  <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find guided_research)/rviz/rviz_navigation.rviz"/>


</launch>
